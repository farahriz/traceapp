<!-- CSS only -->
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <%= render 'home/header' %>
    
    <%= yield %>

    <br>

    <h2>Location Information</h2>
    <%= form_for @location do |f| %>
        <div class="mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Email", :value => @location.email %>
        </div>
        <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Location Name", :value => @location.name %>
        </div>
        <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "New Password" %>
        </div>
        <div class="mb-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm New Password" %>
        </div>
        <div class="alert alert-danger" role="alert">
            Profile update features coming soon!
        </div>
        <button disabled class="btn btn-danger ">Update Info</button>

    <% end %>

</body>