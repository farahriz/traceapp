<!-- CSS only -->
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <%= render 'home/header' %>
    
    <%= yield %>

    <br>

    <h3>Checked in to <Location></h3>
    <table class="table">
        <tbody>
            <tr>
                <td>Name</td>
                <td><%= @checkin.first_name%> <%= @checkin.last_name%></td>
            </tr>
            <tr>
                <td>NRIC/Passport</td>
                <td><%= @checkin.identification%></td>
            </tr>
            <tr>
                <td>Temperature</td>
                <td><%= @checkin.temperature%></td>
            </tr>
            <tr>
                <td>Time</td>
                <td><%= @checkin.created_at %> (<%= @checkin.date_from %> ago)</td>
            </tr>
        </tbody>
    </table>
</body>