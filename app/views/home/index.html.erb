<!-- CSS only -->
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <%= render 'home/header' %>
    
    <%= yield %>

    <br>

    <% if logged_in? %>
        <%= button_to "Logout", sessions_path, method: :delete, class:"btn btn-danger" %>
    <% else %>
        For locations: <br />
        <%= button_to "Got an account? Sign in!", signin_path, method: :get, class:"btn btn-primary"  %>
        <br>

        <b>For people checking in:</b>
        <p>Scan the QR code near you, or ask the location you're visiting for the check in URL</p>
    <% end %>
</body>