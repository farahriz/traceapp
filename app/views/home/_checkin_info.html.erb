<table class="table table-striped">
    <p>Here's a information on all the people who have checked into your location</p>
    <h2> <%= @current_location.name %> </h2>
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Temperature</th>
            <th scope="col">Time</th>
        </tr>
    </thead>
    <tbody>
        <% @current_location.checkins.order('created_at DESC').each_with_index do |checkin, index| %>
            <tr>
                <td><%= checkin.first_name %></td>
                <td><%= checkin.last_name %></td>
                <td><%= checkin.temperature %></td>
                <td><%= checkin.created_at %></td>
            </tr>
        <% end %>
    </tbody>
</table>